<html>
  <head>
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' rel='stylesheet'>
    <title>Places You've Been</title>
  </head>
    <body>
      <h1>Places You've Been</h1>

      {% if cities is not empty %}
        <p>Here are your cities:</p>

          {% for city in cities %}
            <h3>{{ city.getCityName }}</h3>
            <ul>
            <li>{{ city.getLengthOfTime }} Days</li>
            <li>{{ city.getReasonOfVisit }}</li>
            <li><img src= {{city.imagePath}} width= 25%></li>
            </ul>
          {% endfor %}

      {% endif %}

      <form action = '/city' method = 'post'>

        <label for = 'cityName'>Enter City Name</label>
        <input id = 'cityName' name = 'cityName' type = 'text'> </br>

        <label for = 'lengthOfTime'>Enter number of Days!</label>
        <input id = 'lengthOfTime' name = 'lengthOfTime' type = 'number'> </br>

        <label for = 'reasonOfVisit'>Business or Pleasure?</label>
        <input id = 'reasonOfVisit' name = 'reasonOfVisit' type = 'text'> </br>

        <label for = 'imagePath'>Add a photo with a URL:</label>
        <input id = 'imagePath' name = 'imagePath' type = 'text'> </br>

        <button type = 'submit'> Add Your City!</button>
      </form>

      <form action = '/delete_city' method = 'post'>
        <button type='submit'>Delete Your Cities</button>
      </form>

      </body>
  </html>
